<header class="main header no-cover">
	<div class="top-nav">
		<div class="nav-content">
			<div class="blog-info">
				<div class="title-section">
					<a class="blog-home" href="{{@blog.url}}">
						{{#if @blog.logo}}<img src="{{@blog.logo}}" alt="{{@blog.title}}" />{{/if}}
						<span class="blog-title">{{@blog.title}}</span>
					</a>
				</div>
				<div class="nav-section">
					{{#foreach @blog.navigation}}
						<a href="{{url absolute="true"}}"><div class="nav-item{{#if current}} nav-current{{/if}}">{{label}}</div></a>
					{{/foreach}}
				</div>
			</div>
		</div>
	</div>

	<nav class="main-nav overlay clearfix">
		{{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
		{{#if @blog.navigation}}
			<a class="menu-button icon-menu" href="#"><span class="word"></span></a>
		{{/if}}
	</nav>

	<a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>